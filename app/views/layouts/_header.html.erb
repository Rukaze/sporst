<header  id="header">
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <%= link_to "Sporst", root_path, class: "navbar-brand"  %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavDropdown">
      <ul class="navbar-nav">
        <li class="nav-item">
          <li><%= link_to "About",about_path , class: 'nav-link'%></li>
       
        </li>
        <li class="nav-item">
           <li><%= link_to "新規投稿", new_content_path(kind: "baseball"), class: 'nav-link'%></li>
        </li>
        <li class="nav-item">
          <% if @current_user.present? %>
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'nav-link' %>
          <% else %>
            <%= link_to 'ログイン', new_user_session_path, method: :get, class: 'nav-link' %>
          <% end %>
        </li>
        <% if user_signed_in? %>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <%= @current_user.username %>
            </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
            <%= link_to "編集", edit_user_registration_path, class: "dropdown-item"%>
          </div>
        <% end %>
        </li>
      </ul>
    </div>
  </nav>
 
</header>