<header  id="header">
  <nav class="navbar navbar-expand-lg navbar-light bg-light p-4">
    <%= link_to "Sporst", root_path, class: "h1 text-muted mr-4"%>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse " id="navbarNavDropdown">
      <ul class="navbar-nav">
        <li class="nav-item">
          <li><%= link_to "About",about_path , class: 'nav-link h4 mr-4'%></li>
       
        </li>
        <% if user_signed_in? %>
          <li class="nav-item">
             <li><%= link_to "新規投稿", new_content_path(kind: "baseball"), class: 'nav-link h4 mr-4'%></li>
          </li>
        <% end %>
        <li class="nav-item">
          <% if user_signed_in? %>
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'nav-link h4 mr-4' %>
          <% else %>
            <%= link_to 'ログイン', new_user_session_path, method: :get, class: 'nav-link h4 mr-4' %>
          <% end %>
        </li>
        <% if user_signed_in? %>
          <li class="nav-item dropdown h4 mr-4">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <%= @current_user.username %>
            </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
            <%= link_to "編集", edit_user_registration_path, class: "dropdown-item p-2"%>
            <%= link_to "ユーザーページ", user_page_path(id: @current_user.id), class: "dropdown-item p-2"%>
          </div>
        </li>
        
        <% end %>
        <% if user_signed_in? %>
          <li class="nav-item dropdown h4 mr-4">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <%= "リーグ履歴" %>
            </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
            <%= link_to (index_path(league: @current_user.f_history)), class: "dropdown-item p-2" do %>
              <%= @current_user.f_history %>
            <% end %>
             <%= link_to (index_path(league: @current_user.s_history)), class: "dropdown-item p-2" do %>
              <%= @current_user.s_history %>
            <% end %>
             <%= link_to (index_path(league: @current_user.t_history)), class: "dropdown-item p-2" do %>
              <%= @current_user.t_history %>
            <% end %>
          </div>
        </li>
        
        <% end %>
        
      </ul>
    </div>
  </nav>
 
</header>