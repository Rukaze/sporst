source 'https://rubygems.org'

gem 'rails'        
gem 'devise'
gem 'faker'
gem 'rails-i18n'
gem 'puma'         

gem 'uglifier'     
gem 'coffee-rails'
gem 'jquery-rails' 
gem 'turbolinks'
gem 'jbuilder'
gem 'bootstrap'
gem 'carrierwave'
gem 'flexbox-rails'
group :development, :test do
  gem 'sqlite3'
  gem 'byebug', platform: :mri
end

group :development do
  gem 'web-console'
  gem 'listen'
  gem 'spring'
  gem 'spring-watcher-listen'
end

group :test do
  gem 'rails-controller-testing'
  gem 'minitest'
  gem 'minitest-reporters'
  gem 'guard'
  gem 'guard-minitest'
end

group :production do
  gem 'pg'
end

# Windows環境ではtzinfo-dataというgemを含める必要があります
gem 'tzinfo-data', platforms: [:mingw, :mswin, :x64_mingw, :jruby]